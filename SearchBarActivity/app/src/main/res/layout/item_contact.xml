<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/widgetContactsBackGround"
        >
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/widgetContactsDividerColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/widget_contacts_padding"
        />
    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contact_badge"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/widget_contacts_padding"
        />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_badge"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/widget_contacts_padding"
        />

    <ImageButton
        android:id="@+id/call_contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/sym_action_call"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/widget_contacts_padding"
        android:paddingRight="@dimen/widget_contacts_padding"
        />
    <ImageButton
        android:id="@+id/msg_contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/call_contact_button"
        android:src="@android:drawable/sym_action_chat"
        android:background="@android:color/transparent"
        />
</RelativeLayout>

