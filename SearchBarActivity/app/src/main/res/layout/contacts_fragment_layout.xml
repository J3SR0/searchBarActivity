<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_contacts_container"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:minHeight="57dp"
    android:background="@color/widgetBackground"
    android:elevation="2dp"
    >
    <TextView
        android:id="@+id/widget_contacts_title"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:text="@string/widget_title_contacts"
        android:textColor="@color/widgetTitleTextColor"
        android:layout_gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/widget_title_size"
        />

    <TextView
        android:id="@+id/widget_contacts_show_more"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:text="@string/widget_show_more"
        android:textColor="@color/widgetTitleTextColor"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/widget_title_size"
        />

    <ListView
        android:id="@+id/lvContacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_contacts_title"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"
        />
</RelativeLayout>